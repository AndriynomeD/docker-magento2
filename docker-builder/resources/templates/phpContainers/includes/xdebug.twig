###########################################################################
# Install Xdebug (enable/set mode ia docker-entrypoint.sh)
###########################################################################

{% set xdebugVersionFlag = (xdebugVersion == 'latest' or xdebugVersion == '') ? '' : '-' ~ xdebugVersion %}
RUN pecl install -o -f xdebug{{ xdebugVersionFlag }} && rm -rf /tmp/pear && docker-php-ext-enable xdebug
COPY etc/php-xdebug.ini /usr/local/etc/php/conf.d/zz-xdebug-settings.ini

