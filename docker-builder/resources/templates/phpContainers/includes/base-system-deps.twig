###########################################################################
# Install dependencies
###########################################################################

{% set baseSystemPackages = [
    'libicu-dev',
    'libxslt1-dev',
    'libpng-dev',
    'libjpeg62-turbo-dev',
    'libfreetype6-dev',
    'libwebp-dev',
    'libbz2-dev',
    'libgmp-dev',
    'libtidy-dev',
    'libyaml-dev',
    
    'sudo',
    'git'
] %}
RUN apt-get update \
  && apt-get install -y \
    {{ baseSystemPackages|join(' \\\n    ') }} \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

