PHP_MEMORY_LIMIT=4G
# XDEBUG_MODE options:
# off - disabled
# develop - var_dump() improvements, stack traces
# debug - step debugging with IDE
# coverage - code coverage analysis
# gcstats - garbage collection statistics
# profile - profiling information
# trace - function call traces
# Multiple modes: develop,debug,coverage
PHP_XDEBUG_MODE=off
UPDATE_UID_GID=false
# DEBUG - Container debug mode
# true: enables verbose logging and script tracing in entrypoint and bin/ scripts
# false: normal operation (default)
DEBUG=false
MAIL_SEND_ENABLED=true
# MAIL_SEND_PROVIDER options:
# - postfix-mailtrap: Use Postfix with Mailtrap for testing
# - postfix-google: Use Postfix with Google SMTP
# - mailpit-shared: Use shared Mailpit instance
MAIL_SEND_PROVIDER=postfix-mailtrap
# MAIL_SEND_SMTP_CREDENTIALS format: smtp_host login:password
# For Mailtrap: sandbox.smtp.mailtrap.io username:password
# For Gmail: smtp.gmail.com email@gmail.com:app_password
MAIL_SEND_SMTP_CREDENTIALS=sandbox.smtp.mailtrap.io user_login:user_password
UPLOAD_MAX_FILESIZE=64M
